{
  "BaseUrl": "/",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "CoEvent": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Swagger": {
    "RoutePrefix": "docs",
    "RouteTemplate": "/swagger/{documentname}/swagger.json",
    "EndpointPath": "/swagger/{0}/swagger.json"
  },
  "Authentication": {},
  "Mail": {
    "Host": "smtp.office365.com",
    "Port": "587",
    "EnableSsl": "true",
    "UseDefaultCredentials": "false",
    "Timeout": "15000"
  }
}
